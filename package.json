{
  "name": "bkui-vue",
  "private": true,
  "version": "0.0.1-beta.41",
  "workspaces": {
    "packages": [
      "packages/!(**.bak)*",
      "scripts/cli"
    ]
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "vite serve site",
    "build": "yarn build:dist && yarn build:lib",
    "build:site": "vite build site --mode development",
    "build:dist": "rimraf dist && lerna run --stream --scope cli dist",
    "build:lib": "rimraf lib && lerna run --stream --scope cli lib",
    "help:release": "lerna run --stream --scope cli release",
    "release": "yarn build && yarn help:release",
    "analyze:lib": "rimraf lib && lerna run --stream --scope cli lib -- -a",
    "generate:icon": "lerna run --scope @bkui-vue/icon build",
    "changelog": "conventional-changelog -c .changelog.config.js -p angular -i CHANGELOG.md -s -l",
    "lint": "eslint --ext .js,.ts,.tsx,.vue ./packages ./site ",
    "lint:style": "stylelint --fix ./packages/**/*.{css,less} --custom-syntax",
    "lint:fix": "eslint --fix ./packages ./site --ext .js,.ts,.tsx,.vue",
    "test:unit": "jest --passWithNoTests",
    "cz": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "~16.2.3",
    "@commitlint/config-conventional": "~16.2.1",
    "@types/jest": "~27.4.1",
    "@types/node": "~17.0.23",
    "@typescript-eslint/eslint-plugin": "~5.19.0",
    "@typescript-eslint/parser": "~5.19.0",
    "@vitejs/plugin-vue": "~2.3.1",
    "@vitejs/plugin-vue-jsx": "~1.3.9",
    "@vue/babel-plugin-jsx": "~1.1.1",
    "@vue/babel-preset-jsx": "~1.2.4",
    "@vue/compiler-sfc": "~3.2.31",
    "@vue/component-compiler-utils": "~3.3.0",
    "@vue/eslint-config-standard": "~6.1.0",
    "@vue/eslint-config-typescript": "~10.0.0",
    "@vue/test-utils": "~2.0.0-rc.12",
    "@vue/vue3-jest": "~27.0.0-alpha.4",
    "babel-jest": "~27.5.1",
    "clipboard": "~2.0.8",
    "commitizen": "~4.2.4",
    "conventional-changelog-cli": "~2.2.2",
    "cross-env": "~7.0.3",
    "cz-lerna-changelog": "~2.0.3",
    "eslint": "~8.13.0",
    "eslint-config-tencent": "~1.0.4",
    "eslint-plugin-codecc": "~0.1.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-plugin-promise": "~6.0.0",
    "eslint-plugin-simple-import-sort": "~7.0.0",
    "eslint-plugin-vue": "~8.6.0",
    "highlight.js": "~11.5.1",
    "husky": "~7.0.1",
    "jest": "~27.5.1",
    "jest-transform-stub": "~2.0.0",
    "lerna": "~4.0.0",
    "lint-staged": "~12.3.7",
    "markdown-it-container": "~3.0.0",
    "normalize-wheel": "~1.0.1",
    "plop": "~3.0.5",
    "prettier": "~2.6.2",
    "prismjs": "~1.27.0",
    "rimraf": "~3.0.2",
    "stylelint": "~14.6.1",
    "stylelint-order": "~5.0.0",
    "stylelint-scss": "~4.2.0",
    "ts-jest": "~27.1.4",
    "ts-node": "~10.7.0",
    "typescript": "~4.6.3",
    "vite": "~2.9.1",
    "vite-plugin-md": "~0.12.4",
    "vue": "^3.2.0",
    "vue-router": "~4.0.14",
    "vue-types": "~4.1.1"
  },
  "peerDependencies": {
    "highlight.js": "~11.5.0",
    "vue": "^3.2.0"
  },
  "main": "dist/bkui-vue.umd.js",
  "module": "dist/bkui-vue.esm.js",
  "typings": "./lib/index.d.ts",
  "lint-staged": {
    "*.css": "stylelint",
    "*.less": "stylelint --fix --customSyntax=postcss-less",
    "*.{js,ts,tsx,vue}": [
      "eslint --fix",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "@popperjs/core": "~2.11.5",
    "date-fns": "~2.28.0",
    "js-calendar": "~1.2.3",
    "lodash": "~4.17.21",
    "vue-types": "~4.1.1"
  }
}
